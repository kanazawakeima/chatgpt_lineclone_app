<div
  class="w-full bg-center bg-cover h-96"
  style="background-image: url(https://cdn.pixabay.com/photo/2017/08/06/22/01/books-2596809_1280.jpg);"
>
  <div
    class="flex items-center justify-center w-full h-full bg-gray-900 bg-opacity-50"
  >
    <div class="text-center">  
      <h1 class="text-2xl font-semibold text-white uppercase lg:text-3xl">
        ラインで <span class="text-line-green">ログイン</span>
      </h1>
      <div class="w-full px-4 py-2 mt-4 container mx-auto text-sm font-medium text-white uppercase transition-colors duration-200 transform bg-line-green rounded-md lg:w-auto hover:bg-hover-line-green hover:bg-opacity-30 focus:outline-none focus:bg-hover-line-green">
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= button_to "login with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "text-2xl"%><br />
          <% end %>
        <% end %>
      </div>
     </div>
  </div>
</div>

