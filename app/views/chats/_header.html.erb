<header>
  <div>
    <input id="menu-checkbox" type="checkbox" />
    <label class="menu-btn" for="menu-checkbox">
      <i class="fas fa-bars"></i>
    </label>
    <div class="nav-content">
      <input id="menu-checkbox" type="checkbox" />
      <label class="menu-btn" for="menu-checkbox">
        <i class="fas fa-times"></i>
      </label>
      <nav class="nav-menu">
        <ul>
          <%= link_to "New chat", new_chat_path %>
          <table>
            <thead>
              <tr>
                <th>Title</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @chats.each do |chat| %>
                <tr>
                  <td>
                    <%= link_to chat do %>
                      <%= chat.title %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to edit_chat_path(chat) do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                  </td>
                  <td>
                    <%= button_to chat, form: { data: { turbo_confirm: "削除しますか？" } }, method: :delete do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </ul>
      </nav>
    </div>
    <label class="nav-close" for="menu-checkbox"></label>
  </div>
</header>