<header class="flex h-20 items-center border-y-2 p-6">
  <p class="font-sans font-bold text-lime-400 flex-auto w-64 m-1 p-1">Chat LINE</p>
  <div class="flex-auto w-64 m-1 p-1">
    <input id="menu-checkbox" type="checkbox" />
    <label class="menu-btn" for="menu-checkbox">
      <i class="fas fa-bars"></i>
    </label>
    <div class="nav-content">
      <input id="menu-checkbox" type="checkbox" />
      <label class="menu-btn" for="menu-checkbox">
        <i class="fas fa-times"></i>
      </label>
      <nav class="nav-menu">
      <%= link_to "New chat", new_chat_path %>
      <hr>
        <div class="bg-white py-8">
            <div class="mx-auto max-w-lg px-6">
                <ul role="list" class="divide-y divide-gray-100">
                  <% @chats.each do |chat| %>
                    <li class="py-4">
                        <div class="flex items-center gap-x-3">
                          <div class="flex-auto w-64 m-1 p-1">
                            <%= link_to chat do %>
                              <%= chat.title %>
                            <% end %>
                          </div>
                          <div class="flex-auto w-64 m-1 p-1">
                            <div class="flex flex-row-reverse">
                                <div class="p-1">
                                  <%= button_to chat, form: { data: { turbo_confirm: "削除しますか？" } }, method: :delete do %>
                                    <i class="fas fa-trash"></i>
                                  <% end %>
                                </div>
                                <div class="p-1">
                                  <%= link_to edit_chat_path(chat) do %>
                                    <i class="fas fa-edit"></i>
                                  <% end %>
                                </div>
                            </div>
                          </div>
                        </div>
                    </li>
                  <% end %>
                </ul>
            </div>
        </div>
      </nav>
    </div>
    <label class="nav-close" for="menu-checkbox"></label>
  </div>
</header>