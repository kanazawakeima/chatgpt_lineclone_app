<div class="bg-gray-200 h-screen flex flex-col">
  <%= render "header", chat: @chat %>
  <div class="w-full max-w-2xl mx-auto bg-white rounded-lg shadow-md overflow-hidden flex-1 flex flex-col">

    <p class="px-4 pt-4">
      <%= link_to chats_path do %>
        <i class="fas fa-chevron-left"></i>
      <% end %>
      <div class="flex justify-center">
        <div><%= @chat.title %></div>
      </div>
    </p>

    <div data-controller="autoscroll" class="scroller bg-gray-100 h-96 flex-1">
      <%= render @chat.comments %>
    </div>
    <hr>
    <%= render 'comments/form' %>
  </div>
</div>