
<div class="bg-white shadow sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <%= link_to chats_path do %>
        <i class="fas fa-chevron-left"></i>
    <% end %>
    <div class="flex">
      <%= image_tag current_user.profile_picture, alt: "Profile Picture", class: "w-16 h-16 rounded-full object-cover" %>
      <h3 class="text-base font-semibold leading-6 text-gray-900">Username：<%= @user.name %></h3>
    </div>
    <div class="mt-2 max-w-xl text-sm text-gray-500">
      <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Recusandae voluptatibus corrupti atque repudiandae nam.</p>
    </div>
    <div class="mt-5">
      <% if @team %>
        <p>登録日が月末付近の場合ご注意ください</p>
        <%= button_to "解約する", @team, form: { data: { turbo_confirm: "解約しますがいいですか?" } }, method: :delete %>
        <% else %>
            <%= form_tag teams_path do %>
                <article>
                <% if flash[:error].present? %>
                    <div id="error_explanation">
                    <p><%= flash[:error] %></p>
                    </div>
                <% end %>

                <label class="amount">
                    <span>料金: 500円</span>
                </label>
                </article>

                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key = "pk_test_51MqpstH9VISkxUuRHAEDUW0Y8RM2SpnM0JYtfNnQsUpNBY5i4Oj63Ju994BeJZ8lje6Ak2tXe4zlvH7bMSDww4b700ZePxaBMD"
                        data-description="A month's subscription"
                        data-amount="500"
                        data-locale="ja"
                        data-currency="JPY"
                        data-label="Change plan">
                </script>
            <% end %>
        <% end %>
    </div>
  </div>
</div>